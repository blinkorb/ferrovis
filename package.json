{
  "name": "ferrovis",
  "version": "0.0.0",
  "description": "Audio Reactive Ferrofluid Visualization",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "start": "tsb serve",
    "dev": "npm run start",
    "build": "tsb build",
    "typecheck": "tsc --noEmit",
    "format-check": "prettier --check *",
    "format": "prettier --write *",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "test": "npm run format-check && npm run typecheck && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blinkorb/ferrovis.git"
  },
  "keywords": [
    "ferrofluid",
    "ferro",
    "vis",
    "visualization",
    "visualisation",
    "audio",
    "reactive"
  ],
  "author": "BlinkOrb",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blinkorb/ferrovis/issues"
  },
  "homepage": "https://github.com/blinkorb/ferrovis#readme",
  "dependencies": {
    "@jakesidsmith/tsb": "^3.0.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.4.1"
  }
}
